<?xml version="1.0" encoding="UTF-8"?>
	<project name="Youtube Downloader" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar"/>
				<file name="${java.home}\lib\jfxrt.jar"/>
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
	
		<mkdir dir="externalLibs" />
	
		<copy todir="externalLibs">
			<fileset dir="C:\Users\tech\.m2\repository\commons-io\commons-io\2.1">
				<filename name="commons-io-2.1.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\tech\.m2\repository\org\apache\httpcomponents\httpclient\4.1.3">
				<filename name="httpclient-4.1.3.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\tech\.m2\repository\xpp3\xpp3_min\1.1.4c">
				<filename name="xpp3_min-1.1.4c.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\tech\.m2\repository\com\github\axet\wget\1.2.11">
				<filename name="wget-1.2.11.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\tech\.m2\repository\xmlpull\xmlpull\1.1.3.1">
				<filename name="xmlpull-1.1.3.1.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\tech\.m2\repository\commons-logging\commons-logging\1.1.1">
				<filename name="commons-logging-1.1.1.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\tech\.m2\repository\com\google\code\gson\gson\2.2.4">
				<filename name="gson-2.2.4.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\tech\.m2\repository\com\github\axet\threads\0.0.2">
				<filename name="threads-0.0.2.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\tech\.m2\repository\org\apache\commons\commons-lang3\3.1">
				<filename name="commons-lang3-3.1.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\tech\.m2\repository\commons-codec\commons-codec\1.4">
				<filename name="commons-codec-1.4.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\tech\.m2\repository\com\thoughtworks\xstream\xstream\1.4.2">
				<filename name="xstream-1.4.2.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\tech\.m2\repository\org\apache\httpcomponents\httpcore\4.1.4">
				<filename name="httpcore-4.1.4.jar"/>
			</fileset>
		</copy>
	
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="C:\Users\tech\Desktop\Workspace\Youtube Downloader">
				<include name="src/**" />
			</fileset>
		</copy>
	
		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="commons-io-2.1.jar"/>
				<include name="httpcore-4.1.4.jar"/>
				<include name="threads-0.0.2.jar"/>
				<include name="xmlpull-1.1.3.1.jar"/>
				<include name="commons-lang3-3.1.jar"/>
				<include name="commons-codec-1.4.jar"/>
				<include name="commons-logging-1.1.1.jar"/>
				<include name="xstream-1.4.2.jar"/>
				<include name="wget-1.2.11.jar"/>
				<include name="httpclient-4.1.3.jar"/>
				<include name="gson-2.2.4.jar"/>
				<include name="xpp3_min-1.1.4c.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="Cp1255">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="Youtube Downloader.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name=""
			mainClass=""
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/Youtube Downloader.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value=""/>
				<attribute name="Implementation-Title" value=""/>
				<attribute name="Implementation-Version" value=""/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
	
	
	</target>
</project>
